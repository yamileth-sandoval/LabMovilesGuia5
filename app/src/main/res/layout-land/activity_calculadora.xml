<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Calculadora">

    <TextView
        android:id="@+id/p"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textSize="25sp"
        android:text="@string/pi"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/p"
        android:layout_marginTop="1dp"
        android:gravity="end"
        android:text="@string/resPi"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="0dp"
            android:padding="0dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="@string/siete"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/btnPrimero"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/ocho"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/btnPrimero"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/nueve"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/btnPrimero"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/divicion"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/gris"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/del"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/gris"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/inv"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/deg"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/porcentaje"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="0dp"
            android:padding="0dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="@string/cuatro"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/btnPrimero"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/cinco"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/btnPrimero"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/seis"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/btnPrimero"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/multiplicacion"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/gris"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/gris"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/sin"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/cos"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/tan"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="0dp"
            android:padding="0dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="@string/uno"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/btnPrimero"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/dos"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/btnPrimero"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/tres"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/btnPrimero"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/resta"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/gris"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/gris"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/pi"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/e"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/elevacion"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="0dp"
            android:padding="0dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="@string/cero"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/btnPrimero"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/punto"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/btnPrimero"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/btnPrimero"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/suma"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/gris"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/igual"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/gris"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/abrirParentecis"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/cerrarParentecis"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:text="@string/raiz"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@color/colorPrimary"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>